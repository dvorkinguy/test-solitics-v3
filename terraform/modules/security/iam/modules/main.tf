resource "aws_iam_role" "solitics-example_role" {
  name = "solitics-example_role"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = "sts:AssumeRole"
        Effect = "Allow"
        Principal = {
          Service = "ec2.amazonaws.com"
        }
      },
    ]
  })

  tags = {
    Purpose = "solitics-example"
  }
}

resource "aws_iam_policy" "solitics-example_policy" {
  name        = "solitics-example_policy"
  description = "An solitics-example policy"

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Action = [
          "s3:ListBucket",
          "s3:GetObject"
        ]
        Effect = "Allow"
        Resource = [
          "arn:aws:s3:::solitics-example-bucket",
          "arn:aws:s3:::solitics-example-bucket/*",
        ]
      },
    ]
  })
}

resource "aws_iam_role_policy_attachment" "solitics-example_attachment" {
  role       = aws_iam_role.solitics-example_role.name
  policy_arn = aws_iam_policy.solitics-example_policy.arn
}

